<hud name="hexhud">
	<fonts>
		<font name="HL" path="res/font.xml" />
	</fonts>
	<images>
		<image name="mark" path="res/gfx/twilimark.png" />
	</images>
	
	<!-- title screen HUD -->
	<scene name="start">
		<textbox name="title1" font="HL" text="magic" pos="-1, 0.7" pt="2" col="0.8549,0.6745,0.9098,1" />
		<textbox name="title2" font="HL" text="hexagon" pos="1, -1" pt="1.5" col="0.6157,0.851,0.9686,1" />
		<geom name="esctextbg" col=".5,.5,.5,1">
			<!-- top part: "esc to quit" bg -->
			<quad p1="0.7, 6.5, 0" p2="1.7, 5.45, 0" p3="8.3, 5.45, 0" p4="9.3, 6.5, 0" />
			<!-- bottom part: "space to start" bg -->
			<quad p1="-5.25, -4, 0" p2="-4.5, -3.25, 0" p3="4.5, -3.25, 0" p4="5.25, -4, 0" />
			<quad p1="-5.25, -4, 0" p2="-4.5, -4.75, 0" p3="4.5, -4.75, 0" p4="5.25, -4, 0" />
		</geom>
		<geom name="esctextbgborder" col="1,1,1,1">
			<!-- top part bg -->
			<quad p1="0.5, 6.5, 0" p2="0.7, 6.5, 0" p3="1.75, 5.45, 0" p4="1.65, 5.35, 0" />
			<quad p1="1.74, 5.47, 0" p2="8.36, 5.47, 0" p3="8.35, 5.35, 0" p4="1.65, 5.35, 0" />
			<quad p1="8.25, 5.45, 0" p2="9.3, 6.5, 0" p3="9.4, 6.4, 0" p4="8.35, 5.35, 0" />
			<!-- bottom part bg -->
			<quad p1="-5.25, -4, 0" p2="-5.5, -4, 0" p3="-4.6, -3.1, 0" p4="-4.5, -3.25, 0" />
			<quad p1="-5.25, -4, 0" p2="-5.5, -4, 0" p3="-4.6, -4.9, 0" p4="-4.5, -4.75, 0" />
			<quad p1="5.25, -4, 0" p2="5.5, -4, 0" p3="4.6, -3.1, 0" p4="4.5, -3.25, 0" />
			<quad p1="5.25, -4, 0" p2="5.5, -4, 0" p3="4.6, -4.9, 0" p4="4.5, -4.75, 0" />
			<quad p1="-4.6, -3.1, 0" p2="4.6, -3.1, 0" p3="4.5, -3.25, 0" p4="-4.5, -3.25, 0" />
			<quad p1="-4.5, -4.75, 0" p2="4.5, -4.75, 0" p3="4.6, -4.9, 0" p4="-4.6, -4.9, 0" />
		</geom>
		<textbox name="titleesc" font="HL" text="esc to quit" pos="5, 5.8" pt="0.55" col="1,1,1,1" />
		<textbox name="titlestart" font="HL" text="press spacebar" pos="0, -4.02" pt="0.75" col="1,1,1,1" />
		<!-- This logo flashes via program code, not here -->
		<textbox name="titlewarning" font="HL" text="motion sickness warning" pos="0, 3.5" pt="0.75" col="1,0,0,1" />
		
		<textbox name="titleauthor" font="HL" text="made by inderpxar" pos="0, -5.75" pt="0.4" col="1,1,1,1" />
	</scene>
	
	<!-- level select HUD -->
	<scene name="levelselect">
		<textbox name="lev1name" font="HL" text="twilight" pos="0, 5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev1time" font="HL" text="best time:" pos="0, 4.5" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev1diff" font="HL" text="hard" pos="0, 4.2" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<textbox name="lev2name" font="HL" text="applejack" pos="5, 2.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev2time" font="HL" text="best time:" pos="5, 2" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev2diff" font="HL" text="harder" pos="5, 1.7" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<textbox name="lev3name" font="HL" text="fluttershy" pos="5, -1.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev3time" font="HL" text="best time:" pos="5, -2" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev3diff" font="HL" text="hardest" pos="5, -2.3" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<textbox name="lev4name" font="HL" text="rainbow dash" pos="0, -4" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev4time" font="HL" text="best time:" pos="0, -4.5" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev4locked" font="HL" text="locked" pos="0, -4" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev4diff" font="HL" text="hardester" pos="0, -4.8" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<textbox name="lev5name" font="HL" text="rarity" pos="-5, -1.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev5time" font="HL" text="best time:" pos="-5, -2" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev5locked" font="HL" text="locked" pos="-5, -1.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev5diff" font="HL" text="hardestest" pos="-5, -2.3" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<textbox name="lev6name" font="HL" text="pinkie" pos="-5, 2.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev6time" font="HL" text="best time:" pos="-5, 2" pt="0.3" col="0.5,0.5,0.5,1" />
		<textbox name="lev6locked" font="HL" text="locked" pos="-5, 2.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="lev6diff" font="HL" text="hardestestest" pos="-5, 1.7" pt="0.3" col="0.5,0.5,0.5,1" />
		
		<!-- main menu prompts -->
		<geom name="maintextbg" col=".5,.5,.5,1">
			<!-- top part: "esc to quit" bg -->
			<quad p1="-2.8, 6.5, 0" p2="-2.3, 5.6, 0" p3="2.3, 5.6, 0" p4="2.8, 6.5, 0" />
			<!-- bottom middle: "space to start" bg -->
			<quad p1="-4.5, -6.5, 0" p2="-3.5, -5.25, 0" p3="3.5, -5.25, 0" p4="4.5, -6.5, 0" />
		</geom>
		<geom name="arrowbg" col=".5,.5,.5,1">
			<!-- bottom left: left arrow bg -->
			<quad p1="-6.15, -3.5, 0" p2="-3.15, -3.5, 0" p3="-5, -5.75, 0" p4="-8, -5.75, 0" />
			<!-- bottom right: right arrow bg -->
			<quad p1="6.15, -3.5, 0" p2="3.15, -3.5, 0" p3="5, -5.75, 0" p4="8, -5.75, 0" />
		</geom>
		<geom name="maintextbgborder" col="1,1,1,1">
			<!-- top part border -->
			<quad p1="-2.94, 6.5, 0" p2="-2.8, 6.5, 0" p3="-2.25, 5.6, 0" p4="-2.3, 5.5, 0" />
			<quad p1="-2.26, 5.62, 0" p2="2.36, 5.62, 0" p3="2.3, 5.5, 0" p4="-2.3, 5.5, 0" />
			<quad p1="2.94, 6.5, 0" p2="2.8, 6.5, 0" p3="2.25, 5.6, 0" p4="2.3, 5.5, 0" />
			<!-- bottom middle: "space to start" border -->
			<quad p1="-4.5, -6.5, 0" p2="-4.7, -6.5, 0" p3="-3.55, -5.09, 0" p4="-3.5, -5.25, 0" />
			<quad p1="4.5, -6.5, 0" p2="4.7, -6.5, 0" p3="3.55, -5.09, 0" p4="3.5, -5.25, 0" />
			<quad p1="-3.55, -5.09, 0" p2="3.55, -5.09, 0" p3="3.5, -5.25, 0" p4="-3.5, -5.25, 0" />
		</geom>
		<geom name="arrow_l" col="1,1,1,1">
			<!-- bottom left: left arrow -->
			<quad p1="-6.05, -3.75, 0" p2="-5.75, -3.75, 0" p3="-6.45, -4.625, 0" p4="-6.75, -4.625, 0" />
			<quad p1="-6.05, -5.5, 0" p2="-5.75, -5.5, 0" p3="-6.45, -4.625, 0" p4="-6.75, -4.625, 0" />
			<quad p1="-6.6, -4.525, 0" p2="-4.44, -4.525, 0" p3="-4.6, -4.725, 0" p4="-6.6, -4.725, 0" />
			<!-- bottom left: left arrow border -->
			<quad p1="-6.15, -3.5, 0" p2="-3.15, -3.5, 0" p3="-2.85, -3.35, 0" p4="-6.25, -3.35, 0" />
			<quad p1="-6.25, -3.35, 0" p2="-6.15, -3.5, 0" p3="-8, -5.75, 0" p4="-8.36, -5.95, 0" />
			<quad p1="-3.15, -3.5, 0" p2="-2.85, -3.35, 0" p3="-4.9, -5.9, 0" p4="-5, -5.75, 0" />
			<quad p1="-8, -5.75, 0" p2="-5, -5.75, 0" p3="-4.9, -5.9, 0" p4="-8.36, -5.9, 0" />
		</geom>
		<geom name="arrow_r" col="1,1,1,1">
			<!-- bottom right: right arrow -->
			<quad p1="6.05, -3.75, 0" p2="5.75, -3.75, 0" p3="6.45, -4.625, 0" p4="6.75, -4.625, 0" />
			<quad p1="6.05, -5.5, 0" p2="5.75, -5.5, 0" p3="6.45, -4.625, 0" p4="6.75, -4.625, 0" />
			<quad p1="6.6, -4.525, 0" p2="4.44, -4.525, 0" p3="4.6, -4.725, 0" p4="6.6, -4.725, 0" />
			<!-- bottom right: right arrow border -->
			<quad p1="6.15, -3.5, 0" p2="3.15, -3.5, 0" p3="2.85, -3.35, 0" p4="6.25, -3.35, 0" />
			<quad p1="6.25, -3.35, 0" p2="6.15, -3.5, 0" p3="8, -5.75, 0" p4="8.36, -5.95, 0" />
			<quad p1="3.15, -3.5, 0" p2="2.85, -3.35, 0" p3="4.9, -5.9, 0" p4="5, -5.75, 0" />
			<quad p1="8, -5.75, 0" p2="5, -5.75, 0" p3="4.9, -5.9, 0" p4="8.36, -5.9, 0" />			
		</geom>
		<textbox name="titleesc" font="HL" text="esc to quit" pos="0, 5.925" pt="0.45" col="1,1,1,1" />
		<textbox name="titlespaceprompt" font="HL" text="space to start" pos="0, -5.75" pt=".55" col="1,1,1,1" />
	</scene>
	
	<!-- in-level HUD -->
	<scene name="level">
		<geom name="curtimebg" col=".5,.5,.5,1">
			<!-- top left: cur time bg -->
			<quad p1="4.7, 6.5, 0" p2="5.7, 5.65, 0" p3="8.3, 5.65, 0" p4="9.3, 6.5, 0" />
			<!-- top right: best time bg -->
			<quad p1="-2.7, 6.5, 0" p2="-3.7, 5.65, 0" p3="-8.3, 5.65, 0" p4="-9.3, 6.5, 0" />
		</geom>
		<geom name="curtimebgborder" col="1,1,1,1">
			<!-- top left bg -->
			<quad p1="4.5, 6.5, 0" p2="4.7, 6.5, 0" p3="5.75, 5.65, 0" p4="5.65, 5.55, 0" />
			<quad p1="5.74, 5.67, 0" p2="8.36, 5.67, 0" p3="8.35, 5.55, 0" p4="5.65, 5.55, 0" />
			<quad p1="8.25, 5.65, 0" p2="9.3, 6.5, 0" p3="9.4, 6.4, 0" p4="8.35, 5.55, 0" />
			<!-- top right bg -->
			<quad p1="-2.5, 6.5, 0" p2="-2.7, 6.5, 0" p3="-3.75, 5.65, 0" p4="-3.65, 5.55, 0" />
			<quad p1="-3.74, 5.67, 0" p2="-8.36, 5.67, 0" p3="-8.35, 5.55, 0" p4="-3.65, 5.55, 0" />
			<quad p1="-8.25, 5.65, 0" p2="-9.3, 6.5, 0" p3="-9.4, 6.4, 0" p4="-8.35, 5.55, 0" />
		</geom>
		<textbox name="curtime" font="HL" text="100.00" pos="7, 5.975" pt="0.4" col="1,1,1,1" />
		<textbox name="bestrtime" font="HL" text="best: 100.00" pos="-6, 5.975" pt="0.4" col="1,1,1,1" />
		
		<textbox name="tutorial1" font="HL" text="use arrow keys or wasd" pos="0, 2.5" pt="0.6" col="0.5,0.5,0.5,1" />
		<textbox name="tutorial2" font="HL" text="avoid walls" pos="0, 2.5" pt="0.6" col="0.5,0.5,0.5,1" />
	</scene>
	
	<!-- Game over HUD -->
	<scene name="gameover">
		<geom name="gameoverbg" col=".5,.5,.5,1">
			<!-- top and bot - just copied from above menus -->
			<quad p1="-4.5, -6.5, 0" p2="-3.5, -5.25, 0" p3="3.5, -5.25, 0" p4="4.5, -6.5, 0" />
			<quad p1="0.7, 6.5, 0" p2="1.7, 5.45, 0" p3="8.3, 5.45, 0" p4="9.3, 6.5, 0" />
			<!-- level -->
			<quad p1="-100, 3, 0" p2="-3, 3, 0" p3="0, -3, 0" p4="-100, -3, 0" />
			<!-- last time -->
			<quad p1="0, 2, 0" p2="100, 2, 0" p3="100, 0.5, 0" p4="0.75, 0.5, 0" />
			<!-- best time -->
			<quad p1="1.25, -0.5, 0" p2="100, -0.5, 0" p3="100, -2, 0" p4="2, -2, 0" />
		</geom>
		<geom name="gameoverbgborder" col="1,1,1,1">
			<!-- top and bot - just copied from above menus -->
			<quad p1="-4.5, -6.5, 0" p2="-4.7, -6.5, 0" p3="-3.55, -5.09, 0" p4="-3.5, -5.25, 0" />
			<quad p1="4.5, -6.5, 0" p2="4.7, -6.5, 0" p3="3.55, -5.09, 0" p4="3.5, -5.25, 0" />
			<quad p1="-3.55, -5.09, 0" p2="3.55, -5.09, 0" p3="3.5, -5.25, 0" p4="-3.5, -5.25, 0" />
			<quad p1="0.5, 6.5, 0" p2="0.7, 6.5, 0" p3="1.75, 5.45, 0" p4="1.65, 5.35, 0" />
			<quad p1="1.74, 5.47, 0" p2="8.36, 5.47, 0" p3="8.35, 5.35, 0" p4="1.65, 5.35, 0" />
			<quad p1="8.25, 5.45, 0" p2="9.3, 6.5, 0" p3="9.4, 6.4, 0" p4="8.35, 5.35, 0" />
		</geom>
		<textbox name="gameoverspaceprompt" font="HL" text="space to retry" pos="0, -5.75" pt=".55" col="1,1,1,1" />
		<textbox name="gameoveresc" font="HL" text="esc to quit" pos="5, 5.8" pt="0.55" col="1,1,1,1" />
		<textbox name="levelcompleted" font="HL" text="level 6" pos="-5.5, 0" pt="0.9" col="1,1,1,1" />
		<textbox name="levelcompletedname" font="HL" text="generosity" pos="-4.5, -0.9" pt="0.5" col="1,1,1,1" />
		<textbox name="nextlevelat" font="HL" text="next level at" pos="-5.35, -1.8" pt="0.5" col="1,1,1,1" />
		<textbox name="nextleveltime" font="HL" text="60 seconds" pos="-3.3, -2.4" pt="0.5" col="1,1,1,1" />
		<textbox name="stagecomplete" font="HL" text="stage complete" pos="-4.5, -2.1" pt="0.5" col="1,1,1,1" />
		<textbox name="lasttime" font="HL" text="last: 100.00" pos="3.8, 1.25" pt="0.6" col="1,1,1,1" />
		<textbox name="besttime" font="HL" text="best: 100.00" pos="5.1, -1.25" pt="0.6" col="1,1,1,1" />
		<bgimage name="levelcompletedimg" img="mark" pos="-5.5, 1.7" size="2.25, 2.25" />
	</scene>
</hud>